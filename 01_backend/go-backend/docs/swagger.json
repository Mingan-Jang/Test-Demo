{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/api/v1/holidays": {
            "get": {
                "description": "根據日期和營運機構查詢假日",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "holidays"
                ],
                "summary": "查詢假日資訊",
                "parameters": [
                    {
                        "type": "string",
                        "description": "查詢日期 (YYYY-MM-DD)",
                        "name": "date",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "營運機構名稱",
                        "name": "operator",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "開始日期 (YYYY-MM-DD)",
                        "name": "start_date",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "結束日期 (YYYY-MM-DD)",
                        "name": "end_date",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            },
            "post": {
                "description": "創建新的假日記錄",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "holidays"
                ],
                "summary": "創建假日",
                "parameters": [
                    {
                        "description": "假日資訊",
                        "name": "holiday",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/domain.HolidayOperator"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/domain.HolidayOperator"
                        }
                    }
                }
            }
        },
        "/api/v1/holidays/{id}": {
            "put": {
                "description": "更新假日記錄",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "holidays"
                ],
                "summary": "更新假日",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "假日ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "假日資訊",
                        "name": "holiday",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/domain.HolidayOperator"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/domain.HolidayOperator"
                        }
                    }
                }
            },
            "delete": {
                "description": "軟刪除假日記錄",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "holidays"
                ],
                "summary": "刪除假日",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "假日ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No Content"
                    }
                }
            }
        }
    },
    "definitions": {
        "domain.HolidayOperator": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string"
                },
                "date": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "is_active": {
                    "type": "string"
                },
                "operator": {
                    "type": "string"
                },
                "region_city": {
                    "type": "string"
                },
                "region_town": {
                    "type": "string"
                },
                "region_village": {
                    "type": "string"
                },
                "source": {
                    "description": "'weekend', 'disaster', 'google', 'custom'",
                    "type": "string"
                },
                "type": {
                    "description": "'holiday' or 'workday'",
                    "type": "string"
                },
                "updated_at": {
                    "type": "string"
                }
            }
        }
    }
}